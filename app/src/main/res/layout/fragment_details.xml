<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/detail_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/list_item_padding"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/item_movie_image"
        android:layout_width="@dimen/thumbnail_size_width"
        android:layout_height="@dimen/thumbnail_size_height"
        android:scaleType="centerCrop"/>

        <Button
            android:id="@+id/btn_favorite"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Favorite" />

        <TextView
        android:id="@+id/item_movie_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="16sp"
        tools:text="Movie Name"
        android:layout_toEndOf="@id/item_movie_image"
        android:layout_toRightOf="@id/item_movie_image"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/item_movie_overview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:ellipsize="end"
        android:textSize="16sp"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/item_movie_vote_average"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="16sp"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/item_movie_release_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="16sp"
        android:layout_centerVertical="true"/>

        <include
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/trailers_and_reviews"
            android:layout_below="@+id/item_movie_release_date"
            android:layout_marginTop="16dp"/>


</LinearLayout>

</ScrollView>